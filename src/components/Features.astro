			<!-- Features Grid -->
			<div class="flex flex-col gap-[24px] items-start justify-center w-[1240px]">
				<div class="flex gap-[24px] items-center w-full">
					<!-- Column 1 -->
					<div class="basis-0 flex flex-col gap-[24px] grow items-start min-h-px min-w-px shrink-0">
